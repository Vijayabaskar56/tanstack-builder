{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"overrides": [
		{
			"includes": [
				"src/styles.css",
				"src/routeTree.gen.ts",
				".tanstack/**",
				".wrangler/**",
				"dist/**",
				".output/**",
				"public/**",
				"tests/**",
				".github/**",
				".husky/**"
			],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"enabled": false
			}
		}
	],
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		},
		"includes": ["src/*", ".vscode/*", "index.html", "vite.config.js"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
